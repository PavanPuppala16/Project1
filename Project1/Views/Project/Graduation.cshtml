@using Project1.Models;
@model Graduation
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>STEP1</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://www.markuptag.com/bootstrap/5/css/bootstrap.min.css">
    <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-2.2.0.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.16.0/jquery.validate.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.6/jquery.validate.unobtrusive.min.js"></script>


</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <div class="signup-form mt-5 border p-4 bg-light shadow">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <h4 class="mb-5 text-secondary">ADD Graduation Info</h4>
                        <h4 class="mb-5 text-secondary">STEP3</h4>
                        <div class="row">
                            <div class="mb-6 col-md-6">
                                <label> HTDID<span class="text-danger">*</span></label>
                                @Html.TextBoxFor(model => model.HTDID, new { @class = "form-control", placeholder="Enter HTDID" })
                                @Html.ValidationMessageFor(model => model.HTDID, "", new { @class = "text-danger" })
                            </div>
                            <div class="mb-6 col-md-6">
                                <label> EngineeringCollegeName<span class="text-danger">*</span></label>
                                @Html.TextBoxFor(model => model.EngineeringCollegeName, new { @class = "form-control", placeholder="Enter EngineeringCollegeName" })
                                @Html.ValidationMessageFor(model => model.EngineeringCollegeName, "", new { @class = "text-danger" })
                            </div>
                            <div>
                                <div class="mb-3 col-md-6">
                                    <label>Branch<span class="text-danger">*</span></label>
                                    @Html.DropDownListFor(model => model.Branch, new List<SelectListItem> {
                                new SelectListItem { Text="--Select--",Value="--select--"},
                                new SelectListItem { Text="CSE",Value="CSE"},
                                new SelectListItem { Text="ECE",Value="ECE"},
                                new SelectListItem { Text="MECH",Value="MECH"},
                                new SelectListItem { Text="EEE",Value="EEE"},
                                new SelectListItem { Text="CIVIL",Value="CIVIL"}


                                }, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="mb-3 col-md-6">
                                <label>EngineeringPassout<span class="text-danger">*</span></label>
                                @Html.EditorFor(model => model.EngineeringPassout, new { htmlAttributes = new { @class = "form-control input-md", @placeholder = "EngineeringPassout"} })
                                @Html.ValidationMessageFor(model => model.EngineeringPassout, "", new { @class = "text-danger" })
                            </div>
                            <div class="mb-6 col-md-6">
                                <label> Backlog<span class="text-danger">*</span></label>
                                @Html.TextBoxFor(model => model.Backlog, new { @class = "form-control", placeholder="Enter Backlog" })
                                @Html.ValidationMessageFor(model => model.Backlog, "", new { @class = "text-danger" })
                            </div>
                            <div class="mb-6 col-md-6">
                                <label> GraduationAggregate<span class="text-danger">*</span></label>
                                @Html.TextBoxFor(model => model.GraduationAggregate, new { @class = "form-control", placeholder="Enter GraduationAggregate" })
                                @Html.ValidationMessageFor(model => model.GraduationAggregate, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="col-md-7">
                            <p class="text-center mt-3 text-secondary">Move To Next Page  @Html.ActionLink("STEP5","Family","Project")</p>
                        </div>
                        <div class="col-md-5">
                            <input type="submit" class="btn btn-primary float-end" value="Submit" onclick="alert('DO YOU WANT SAVE YOUR DATA?')">

                        </div>

                    }@ViewBag.Message
                </div>
</body>

</html>
